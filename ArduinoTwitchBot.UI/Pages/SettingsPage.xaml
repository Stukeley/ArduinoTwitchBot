<Page x:Class="ArduinoTwitchBot.UI.Pages.SettingsPage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	  xmlns:local="clr-namespace:ArduinoTwitchBot.UI.Pages"
	  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
	  mc:Ignorable="d" 
	  d:DesignHeight="400" d:DesignWidth="500"
	  Title="SettingsPage" Background="White">

	<StackPanel>

		<Button x:Name="MainPageButton" Width="100" Height="40" Margin="20" Padding="0" Click="MainPageButton_Click" ToolTip="Click here to navigate and connect the bot." FontSize="18">
			<StackPanel Orientation="Horizontal">
				<materialDesign:PackIcon Kind="Home" Width="20" Height="20" VerticalAlignment="Center"/>
				<TextBlock Text="Home" VerticalAlignment="Center" Margin="5,0,0,0"/>
			</StackPanel>
		</Button>

		<TextBlock Text="Twitch setup" HorizontalAlignment="Center" FontSize="20" FontWeight="DemiBold" TextDecorations="Underline" Margin="0,0,0,10"/>

		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
			<Grid>
				<PasswordBox x:Name="ApiKeyBox" materialDesign:HintAssist.Hint="API key" FontSize="18" Width="200" PasswordChar="•"/>
				<TextBox x:Name="VisibleApiKeyBox" materialDesign:HintAssist.Hint="API KEY" FontSize="18" Width="200" Visibility="Collapsed"/>
				<materialDesign:PackIcon x:Name="ShowHideApiKey" Kind="Eye" Width="20" Height="20" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5" Foreground="DarkSlateGray" PreviewMouseUp="ShowHideApiKey_PreviewMouseUp" Cursor="Hand"/>
			</Grid>

			<materialDesign:PackIcon x:Name="ApiKeyHelpButton" Kind="QuestionMarkCircle" Foreground="Purple" VerticalAlignment="Center" HorizontalAlignment="Center" Width="30" Height="30" ToolTip="You need to register your bot on Twitch to get an API key. Click here to learn more." PreviewMouseUp="ApiKeyHelpButton_PreviewMouseUp" Margin="5,0,0,0" Cursor="Hand"/>
		</StackPanel>

		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
			<TextBox x:Name="ChannelNameBox" materialDesign:HintAssist.Hint="Channel name" FontSize="18" Width="200"/>

			<materialDesign:PackIcon Kind="QuestionMarkCircle" Foreground="Purple" VerticalAlignment="Center" HorizontalAlignment="Center" Width="30" Height="30" ToolTip="Name of Twitch channel the bot will join." Margin="5,0,0,0"/>
		</StackPanel>

		<Separator Width="300" Background="Purple" Margin="10"/>

		<TextBlock Text="Arduino setup" HorizontalAlignment="Center" FontSize="20" FontWeight="DemiBold" TextDecorations="Underline" Margin="0,0,0,10"/>

		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
			<TextBlock Text="COM port" FontSize="18" VerticalAlignment="Center" Width="150" TextAlignment="Center"/>

			<ComboBox x:Name="PortSelectionBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" ToolTip="Select the desired COM port." Margin="20,0,0,0" FontSize="18"/>

			<Button x:Name="RefreshPortNamesButton" Content="Refresh" VerticalAlignment="Center" ToolTip="If you don't see your COM port on the list, try refreshing." Click="RefreshPortNamesButton_Click" Margin="10,0,0,0" Width="80"/>
		</StackPanel>

		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
			<TextBox x:Name="ConnectionTestBox" materialDesign:HintAssist.Hint="Sample signal" FontSize="18" Width="150" ToolTip="Enter a value that should be sent over through the selected port, and press Test to see if it works." VerticalAlignment="Center" TextAlignment="Center"/>

			<ComboBox x:Name="TestSignalTypeBox" Width="100" Margin="20,0,0,0" ToolTip="What data type the value sent will be interpreted as." VerticalAlignment="Center" FontSize="18">
				<!-- Dynamically generated values -->
			</ComboBox>

			<Button x:Name="ConnectionTestButton" Content="Test" ToolTip="Test if the connection works." Click="ConnectionTestButton_Click" Margin="10,0,0,0" VerticalAlignment="Center" Width="80"/>
		</StackPanel>

	</StackPanel>
</Page>
